<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:background="@drawable/rounded_bg">


    <ImageView
        android:id="@+id/bgimage"
        android:layout_width="341dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/pdf_image_icon" />

    <TextView
        android:id="@+id/txtPdfTitle"
        android:layout_width="364dp"
        android:layout_height="34dp"
        android:layout_below="@+id/bgimage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="2dp"
        android:text="Title chaper 1 "
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgDownload"
        android:layout_width="41dp"
        android:layout_height="35dp"
        android:layout_above="@+id/txtPdfTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="151dp"
        android:src="@drawable/baseline_download_24" />

    <ImageView
        android:id="@+id/btnDeletePDF"
        android:layout_width="37dp"
        android:layout_height="45dp"
        android:layout_marginBottom="117dp"
        android:src="@drawable/delete_icon" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPdfTitle"
        android:layout_marginTop="2dp"
        android:background="@drawable/rounded_bottom_corner"
        android:text="Purchase Now"
        android:textColor="@color/white" />

</RelativeLayout>
