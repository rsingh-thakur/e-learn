<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:background="@drawable/rounded_bg">


    <ImageView
        android:id="@+id/notesImage"
        android:layout_width="382dp"
        android:layout_height="156dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/notebook" />

    <TextView
        android:id="@+id/txtPdfNotesTitle"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notesImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/NotesPrice"
        android:text="Title of notes "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/NotesPrice"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notesImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="13dp"

        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/NotesPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/notesImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:textColor="#379803"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btnDeleteNotes"
        android:layout_width="37dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="117dp"
        android:src="@drawable/delete_icon" />

    <Button
        android:id="@+id/btnNotesPurchase_Dnld"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/txtPdfNotesTitle"
        android:layout_marginTop="0dp"
        android:background="@drawable/rounded_bottom_corner"
        android:text="Buy and Download"
        android:textColor="@color/white" />

</RelativeLayout>
