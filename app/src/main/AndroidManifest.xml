    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Elearning"
        tools:targetApi="31">

        <activity
            android:name=".PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".PDFListActivity"
            android:exported="false" />
        <activity
            android:name=".EditVideoActivity"
            android:exported="false" />
        <activity
            android:name=".FullScreenPlayerActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".PlayerActivity"
            android:exported="false" />
        <activity
            android:name=".VideoListActivity"
            android:exported="false" />
        <activity
            android:name=".AllCousesActivty"
            android:exported="false" />
        <activity
            android:name=".MyCoursesActivity"
            android:exported="false" />
        <activity
            android:name=".TestActivity"
            android:exported="false" />
        <activity
            android:name=".LiveClassesActivity"
            android:exported="false" />
        <activity
            android:name=".NotesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.UploadVideoActivity"
            android:exported="false"
            android:label="@string/title_activity_free_videos"
            android:theme="@style/Theme.Elearning" />
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.Elearning.NoActionBar" />
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".VerifyOTPActivity"
            android:exported="false" />
        <activity
            android:name=".SendOTPActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".UserSignUpActivity"
            android:exported="false" />

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <meta-data
            android:name="razorpay.api.key"
            android:value="rzp_test_GYytSvAZkcc8c2" />

        <activity
            android:name="com.razorpay.CheckoutActivity"
            android:configChanges="keyboard|keyboardHidden|screenSize|orientation"
            android:exported="true"
            android:theme="@style/CheckoutTheme"
            tools:replace="android:configChanges">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <data android:host="rzp.io"
                    android:scheme="io.rzp"/>
            </intent-filter>
        </activity>


        <receiver android:name="com.razorpay.RzpTokenReceiver"
            android:exported="false">

          <intent-filter>
              <action android:name="rzp.device_token.share"/>
          </intent-filter>
        </receiver>

    </application>

</manifest>